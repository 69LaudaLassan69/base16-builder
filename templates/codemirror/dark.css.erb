.cm-s-monokai.CodeMirror {background: #<%= @base["00"]["hex"] %>; color: #<%= @base["06"]["hex"] %>;}
.cm-s-monokai div.CodeMirror-selected {background: #<%= @base["01"]["hex"] %> !important;}
.cm-s-monokai .CodeMirror-gutters {background: #<%= @base["00"]["hex"] %>; border-right: 0px;}
.cm-s-monokai .CodeMirror-linenumber {color: #<%= @base["03"]["hex"] %>;}
.cm-s-monokai .CodeMirror-cursor {border-left: 1px solid #<%= @base["04"]["hex"] %> !important;}

.cm-s-monokai span.cm-comment {color: #<%= @base["0F"]["hex"] %>;}
.cm-s-monokai span.cm-atom {color: #<%= @base["0E"]["hex"] %>;}
.cm-s-monokai span.cm-number {color: #<%= @base["0E"]["hex"] %>;}

.cm-s-monokai span.cm-property, .cm-s-monokai span.cm-attribute {color: #<%= @base["0B"]["hex"] %>;}
.cm-s-monokai span.cm-keyword {color: #<%= @base["08"]["hex"] %>;}
.cm-s-monokai span.cm-string {color: #<%= @base["0A"]["hex"] %>;}

.cm-s-monokai span.cm-variable {color: #<%= @base["0B"]["hex"] %>;}
.cm-s-monokai span.cm-variable-2 {color: #<%= @base["0D"]["hex"] %>;}
.cm-s-monokai span.cm-def {color: #<%= @base["09"]["hex"] %>;}
.cm-s-monokai span.cm-error {background: #<%= @base["08"]["hex"] %>; color: #<%= @base["04"]["hex"] %>;}
.cm-s-monokai span.cm-bracket {color: #<%= @base["06"]["hex"] %>;}
.cm-s-monokai span.cm-tag {color: #<%= @base["08"]["hex"] %>;}
.cm-s-monokai span.cm-link {color: #<%= @base["0E"]["hex"] %>;}

.cm-s-monokai .CodeMirror-matchingbracket { text-decoration: underline; color: white !important;}
